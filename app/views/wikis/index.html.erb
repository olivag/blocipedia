<div class="flickr_pagination">
  <div class="page_info">
    <%= page_entries_info @wikis %>
  </div>
  <br>
    <%= will_paginate @wikis, :container => false %>
</div>
<div class="panel panel-primary">
  <div class="panel-heading"><h4>Wikis</h4></div>
  
  <table class = "table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th class="pull-right">
          <% if user_signed_in? %>
            <%= link_to "New Wiki", new_wiki_path, id: "new-wiki-link", class: "btn btn-success" %>
          <% end %>
        </th>
      </tr>
    </thead>
     
    <tbody>
      <% @wikis.each do |wiki| %>
        <tr>
          <td><%= link_to wiki.title, wiki %></td>
          <td></td>
        </tr> 
      <% end %>    
    </tbody>  
  </table>
</div>

<script>
  // Sends click event to Blocmetrics
  $("#new-wiki-link").click(function(){
    blocmetrics.report("New wiki clicked")  
  })
</script>
